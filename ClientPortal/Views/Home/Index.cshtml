@using Microsoft.AspNetCore.Identity
@using ClientPortal.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    if (SignInManager.IsSignedIn(User))
    {
        ViewData["Title"] = "Dashboard";
        ViewData["BodyCss"] = "nav-md menu_fixed";
    }
    else
    {
        ViewData["Title"] = "Login";
        ViewData["BodyCss"] = "login";
    }
}

<vc:home></vc:home>

@section ScriptLinks{
    <script src="~/js/vendors/switchery/dist/switchery.js"></script>
    <script src="~/js/vendors/jquery.inputmask/dist/min/jquery.inputmask.bundle.min.js"></script>
    <script src="~/js/dadatableajax.js"></script>
    <script src="~/js/account.js"></script>
    <script src="~/js/menu.js"></script>
    <script src="~/js/profile.js"></script>
    <script src="~/js/pagination.js"></script>
    <script src="~/js/addUser.js"></script>
    <script src="~/js/list.js"></script>
    <script src="~/js/campaign.js"></script>
    <script src="~/js/dashboard.js"></script>
    <script src="~/js/search.js"></script>
}

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            MENU.init();
        });
    </script>
}
