            <div class="row" id="main_panel">
                <vc:dashboard role="" id="0"></vc:dashboard>
            </div>
        </div>
        <footer>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                <span class="">&copy; Copyright 2018 TravNow&trade;. All Rights Reserved.</span>
            </div>
            <div class="pull-right">
                <a href="#">
                    <img src="images/travnow-icon.svg" class="footer-icon">
                    <span class="version-text">TravNow&trade; Admin Dashboard @Microsoft.Extensions.PlatformAbstractions.PlatformServices.Default.Application.ApplicationVersion</span>
                </a>
            </div>
            <div class="clearfix"></div>
        </footer>
    </div>
</div>

