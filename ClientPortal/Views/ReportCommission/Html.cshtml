@model Codes.Service.ViewModels.CommissionResultViewModel
<div class="x_panel">
    <div class="x_content">
        <span class="h2 text-muted">Commission Report by @Model.Type</span>
        <div class="pull-right no-print">
            <a href="#" target="_blank" class="hidden"><button type="button" class="btn btn-default btn-sm"><i class="fa fa-file-pdf-o"></i>&nbsp; Download PDF</button></a>&nbsp;
            <button id="export-excel" type="button" class="btn btn-default btn-sm"><i class="fa fa-download"></i> Export Excel</button>
        </div>
        <div class="clearfix"></div>
        <hr class="card-hr">
        <span class="h4">@Model.Type: @Model.AccountName</span><br />
        <span class="h4">Date Range: @Html.DisplayFor(m => m.CheckoutStartDate) - @Html.DisplayFor(m => m.CheckoutEndDate)</span>

        <div class="pull-right spacer-5">Report Ran: @Model.ReportTime</div>
        <div class="clearfix"></div>

        @Html.DisplayFor(m => m.Tables)

        @if (Model.AccountName == "All")
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th class="text-right col-lg-2 col-md-2"><b class="capitalFirstLetter">All Totals:</b></th>
                        <th class="col-lg-2 col-md-2"><strong>@Html.DisplayFor(m => m.TotalCards)</strong></th>
                        <th class="col-lg-2 col-md-2"><strong>@Html.DisplayFor(m => m.TotalTransactions)</strong></th>
                        <th class="col-lg-2 col-md-2"><strong>@Html.DisplayFor(m => m.TotalInternetPrice)</strong></th>
                        <th class="col-lg-2 col-md-2"><strong>@Html.DisplayFor(m => m.TotalYouPayPrice)</strong></th>
                        <th class="col-lg-2 col-md-2"><strong>@Html.DisplayFor(m => m.TotalMemberSavings)</strong></th>
                        <th class="col-lg-2 col-md-2"><strong>@Html.DisplayFor(m => m.TotalCommissionEarned)</strong></th>
                        <th class="col-lg-1 col-md-1 text-center"></th>
                    </tr>
                </thead>
            </table>
        }
    </div>
</div>
